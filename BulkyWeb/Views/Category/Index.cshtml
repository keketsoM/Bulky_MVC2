@model IEnumerable<Category>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-decoration-underline">Category List</h2>

        </div>
        <div class="col-6 text-end mb-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-dark"><i class="bi bi-plus-circle-fill"></i>Create Category</a>
        </div>
    </div>

    <table class="table table-bordered table-borderless">
        <thead>
            <tr>
                <th class="text-center">
                    Category Name

                </th>
                <th class="text-center">
                    Display Order
                </th>
                <th class="text-center">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categories in Model.OrderBy(c => c.DisplayOrder))
            {

                <tr class="table-striped-columns">
                    <td class="text-center">
                        @categories.Name
                    </td>
                    <td class="text-center">
                        @categories.DisplayOrder
                    </td>
                    <td>
                        <div class=row>
                            <div class="col-4">
                                <a class="btn btn-outline-primary w-100" asp-controller="Category" asp-action="Detail" asp-route-id="@categories.CategoryId" style="width:100px"><i class="bi bi-eye-fill"></i>Detail</a>
                            </div>
                            <div class="col-4">
                                <a class="btn btn-outline-secondary w-100" asp-controller="Category" asp-action="Edit" asp-route-id="@categories.CategoryId" style="width:100px"><i class="bi bi-pencil-square"></i>Edit</a>
                            </div>
                            <div class="col-4">
                                <a class="btn btn-outline-danger w-100" asp-controller="Category" asp-action="Delete" asp-route-id="@categories.CategoryId" style="width:100px"><i class="bi bi-trash3-fill"></i>Delete</a>
                            </div>
                        </div>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>