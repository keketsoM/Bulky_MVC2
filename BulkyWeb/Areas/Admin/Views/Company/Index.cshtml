@model IEnumerable<Company>
<partial name="_Notification" />
<div class="card shadow border-0 mt-4 mb-5  rounded">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</</h2>

            </div>

        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6 text-end mb-3">
            </div>
            <div class="col-6 text-end mb-3">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-dark"><i class="bi bi-plus-circle-fill"></i>Create Company</a>
            </div>
        </div>

        <table class="table table-bordered table-borderless">
            <thead>
                <tr>
                    <th class="text-center">
                        Name

                    </th>
                    <th class="text-center">
                        Street Address
                    </th>

                    <th class="text-center">
                        City
                    </th>

                    <th class="text-center">
                        State
                    </th>
                    <th class="text-center">
                        Postal Code
                    </th>
                    <th class="text-center">
                        Phone Number
                    </th>
                     <th>

                    </th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var companies in Model.OrderBy(c => c.Name))
                {

                    <tr class="table-striped-columns">
                        <td class="text-center">
                            @companies.Name
                        </td>
                        <td class="text-center">
                            @companies.StreetAddress
                        </td>

                        <td class="text-center">
                            @companies.City
                        </td>
                        <td class="text-center">
                            @companies.State
                        </td>
                        <td class="text-center">
                            @companies.PostalCode
                        </td>
                        <td class="text-center">
                            @companies.PhoneNumber
                        </td>
                        <td>
                            <div class=row>
                                <div class="col-6">
                                    <a class="btn btn-outline-secondary w-100 rounded" asp-controller="Company" asp-action="Upsert" asp-route-id="@companies.Id" style="width:100px"><i class="bi bi-pencil-square"></i>Edit</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-outline-danger w-100  rounded" asp-controller="Company" asp-action="Delete" asp-route-id="@companies.Id" style="width:100px"><i class="bi bi-trash3-fill"></i>Delete</a>
                                </div>
                                <div>

                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>