@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">
            Payment Successful
        </h1>
        Your Order Number is: <strong>@Model.ToString()</strong><br /><br />
        <img src="/images/OrderConfimationImage/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center style="color:maroon">
      <br />
      Payment has been applied successfully!<br/>
      <a asp-area="Admin" asp-controller="Order" asp-action="Detail" asp-route-orderId="@Model" class="btn btn-primary">Back to order detail</a>

    </div>
</div>