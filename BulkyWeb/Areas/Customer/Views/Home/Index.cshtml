@model IEnumerable<Product>
<div class="row pb-3">
    @foreach(var products  in Model )
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@products.ImageUrl" class="card-img-top rounded"  />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h6 text-dark opacity-75 text-uppercase text-center">@products.Title</p>
                                <p class="card-title text-warning text-center">by <b>@products.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class=" text-dark text-opacity-75 text-uppercase text-center mb-0">
                                    List Price: <span class="text-decoration-line-through">@products.ListPrice.ToString("c");</span>
                                </p>
                            </div>
                            <div class="pl-1 mb-0">
                                <p class=" text-dark text-opacity-75  text-uppercase text-center">
                                  As low as: <span>@products.Price100.ToString("c");</span>
                                </p>
                            </div>
                        </div>
                        <div class="pl-1" >
                            <a asp-action="detail" class=" btn btn-primary bg-gradient border-0 form-control">
                              Detail
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
